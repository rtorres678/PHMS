<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account"
    android:orientation="vertical"
    android:background="@drawable/background_color"
    android:padding="20dp">
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"

    <ImageView
        android:layout_width="383dp"
        android:layout_height="117dp"
        android:src="@drawable/phms_logo"
        android:transitionName="logo_image" />

    <TextView
        android:id="@+id/headerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Account"
        android:textSize="18sp"
        android:transitionName="logo_desc" />

    <Button
        android:id="@+id/btnSampleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:background="#2CFFFFFF"
        android:text="Sample Button"
        android:textColor="#FFFFFF"
        android:transitionName="button_tran" />

    <Button
        android:id="@+id/btnSampleButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:background="#2CFFFFFF"
        android:text="Sample Button 2"
        android:textColor="#FFFFFF"
        android:transitionName="button_tran" />

    <Button
        android:id="@+id/btnSampleButton3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:background="#2CFFFFFF"
        android:text="Sample Button 3"
        android:textColor="#FFFFFF"
        android:transitionName="button_tran" />

    <Button
        android:id="@+id/btnSampleButton4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:background="#2CFFFFFF"
        android:text="Sample Button 4"
        android:textColor="#FFFFFF"
        android:transitionName="button_tran" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"/>

</LinearLayout>